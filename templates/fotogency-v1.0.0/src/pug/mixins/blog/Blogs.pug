              .bg-warning.p-2.text-center.opacity-50
                p.text-white.mb-0=blog.tag
            .mt-4
              h5.mb-3=blog.title
              p.text-200.m-0.mb-3 By - 
                span.text-300.fw-bold=blog.author
              p.mb-3=blog.excerpt
              button.btn.btn-link.text-warning.p-0
                span.fw-medium Read full article
                img(src=`${CWD}assets/img/icons/long-arrow.png` alt="").ms-3
    .row
