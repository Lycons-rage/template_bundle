          +FooterList('Blog','Contact Us','Help Centre','Media Kit','Donation')
      
      .col-6.col-sm-4.col-lg-2.mb-3.order-3.order-sm-2
        h3.lh-lg.fw-bold.text-light.mb-4.font-sans-serif  Legal
        ul.list-unstyled.mb-md-4.mb-lg-0
          +FooterList('Terms of Services','Privacy Policy','Accessibility','Trademark','Sitemap')
  +Footer