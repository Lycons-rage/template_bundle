mixin Numbers
  -
    const numbers = [
      {
        number: "120M",
        title:'Cool feature title'
      },
      {
        number: "10.000",
        title:'Cool feature title'
      },
      {
        number: "240",
        title:'Cool feature title'
      },
    ]
  +Section.bg-dark
    p.text-center.text-light Our numbers
    h1.text-center.text-white.w-lg-75.mx-auto.fs-xl-6.fs-lg-4.fs-3 Handshake infographic mass market crowdfunding iteration.
    .row.mt-5
      each number in numbers
        .col-md-4.col-sm-6.text-center
          h1.text-success.fs-5.fs-md-6.fs-lg-7.fs-xl-9= number.number
          p.text-light.fs-2= number.title