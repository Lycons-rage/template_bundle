//- ===============================================
//-    A wireframe for every section
//- ===============================================

mixin Section(container)
  = '\n\n'
  // ============================================
  // <section> begin ============================
  section&attributes(attributes)
    = '\n'
    //- Container for content
    - if (typeof(container) === 'undefined' || container === 'container') { container = 'container' }
    div(class=container)

      block

    // end of .container
    = '\n'
  // <section> close ============================
  // ============================================
  = '\n\n'
